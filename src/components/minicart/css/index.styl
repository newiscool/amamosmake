@media (max-width: 1199px)
    .minicart--fixed
        width: 100%
        height: 100%
        overflow: hidden

    .minicart
        position: fixed
        z-index: 200
        top: 0
        left: 0
        width: 100%
        height: 100%

        background: rgba(0,0,0, .5)

        visibility: hidden
        opacity: 0

        transition: all .2s ease-in-out

        &.minicart--actived
            visibility: visible
            opacity: 1

    .minicart__container
        position: fixed
        top: 0
        right: 0
        width: 300px
        height: 100%

        background: #ffffff

        transform: translateX(100%)
        transition: all .2s ease-in-out

        .minicart--actived &
            transform: translateX(0)

    .minicart__header
        display: flex
        justify-content: space-between
        align-items: center
        margin 0 10px
        border-bottom 1px solid #f3f3f3

    .minicart__title
        color: #E70D91;
        flex: 1 1 auto;
        font-size: 14px;
        font-weight: 700;
        margin: 0;
        text-transform: uppercase;

    .minicart__close
        width: 45px
        height: 45px

        display: flex
        justify-content: center
        align-items: center

        color: #E70D91;
        font-size: 20px;

    .minicart__empty
        text-align: center
        padding: 20px

    .minicart__list
        margin: 0
        padding: 0

    .minicart__item
        position: relative
        max-height: 400px
        visibility: visible
        opacity: 1
        transition: all .4s ease-in-out

        + .minicart__item
            border-top: solid 1px #eee

    .minicart__link
        display: flex
        align-items: center
        list-style: none
        padding: 10px

        color: #666666

        &:hover
            text-decoration: none

    .minicart__info
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        align-items: center

    .minicart__name
        font-size: 14px
        flex: 0 0 100%

    .minicart__image
        flex: 0 0 50px
        margin-right: 20px

    .minicart__qty
        font-size: 10px

    .minicart__price
        font-size: 14px

    .minicart__total
        display: flex
        height: 45px
        align-items: center
        justify-content: space-between

        font-size: 14px
        font-weight: 700
        padding: 0 20px

    .minicart__main
        height: calc(100% - 140px)

        overflow-y: auto

    .minicart__finish
        background: #e70d91
        color: #ffffff
        font-size: 16px
        font-weight: 700
        text-transform: uppercase

        height: 50px

        display: flex
        justify-content: center
        align-items: center

        &:hover
            background: #339021

    .minicart--delete
        padding-top: 0
        padding-bottom: 0
        max-height: 0
        border: 0
        margin: 0
        opacity: 0
        visibility: hidden

        overflow: hidden

    .minicart__qty
      &:before
        content ' / '

@media (min-width: 1200px)


  .cart:hover
    .cart__dropdown
      opacity 1
      visibility visible

  .minicart__list
    border-bottom 1px solid #E70D91
    margin-bottom 20px
    max-height 250px
    overflow auto

  .minicart__item
    border-bottom 1px solid #e7e7e7
    padding-bottom 15px

    &:last-child
      border-bottom 0 none

  .minicart__header
    display none

  .minicart__link
    align-items center
    display flex
    padding 0 15px

  .minicart__image
    align-items center
    display flex
    flex 0 0 auto
    justify-content center
    margin 0
    position relative
    width 60px

    img
      max-height 60px
      max-width 60px

  .minicart__info
    flex 1 1 auto

  .minicart__name
    color #787878
    display block
    font-size 11px
    font-weight 400
    letter-spacing -.1px
    line-height 14px

  .minicart__details
    align-items baseline
    display flex
    justify-content space-between
    margin-bottom 10px

  .minicart__price
  .minicart__qty
    color #e70d91
    font-size 12px
    font-weight 600
    letter-spacing -.1px


  .minicart__total-label
    color #787878
    display block
    font-size 12px
    font-weight 600
    letter-spacing -.1px
    margin-bottom 5px
    text-align center
    text-transform uppercase

  .minicart__total-price
    color #e70d91
    display block
    font-size 15px
    font-weight 600
    letter-spacing -.1px
    text-align center

  .minicart__finish
    border #e70d91
    background #e70d91
    border-radius 2px
    color white
    display block
    font-size 13px
    font-weight 700
    letter-spacing -.1px
    line-height 15px
    margin-top 10px
    padding 14px 0
    text-align center
    text-transform uppercase

    &:hover
      color white

.cart__dropdown
  display block